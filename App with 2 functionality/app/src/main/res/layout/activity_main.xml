<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanvir.assignment3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select your convenient conversion method"
        android:id="@+id/welcomeText"
        android:textSize="24sp" />

    <Button
        android:text="Temparature Conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:id="@+id/temparatureBtn"
        android:layout_below="@+id/welcomeText"
        android:layout_toStartOf="@+id/distanceBtn"
        android:layout_toLeftOf="@+id/distanceBtn"
        android:minHeight="69dp" />

    <Button
        android:text="Distance Conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceBtn"
        android:layout_alignTop="@+id/temparatureBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/temparatureBtn" />

</RelativeLayout>
